module newPiece(logic pickPiece, output logic [15:0] blockstate_new, output logic [5:0] spriteindex_new);

logic [2:0] piece;

 always_comb
 begin
  if(pickePiece)
	begin
		piece = $urandom_range(0,6);
		
		case(piece)
		 //T piece
			3'b0:
			begin
				blockstate_new = 16'b 0000 0000 0010 0111;
				spriteindex_new = 6'd41;
			end
		//I piece
			3'b1:
			begin
				blockstate_new = 16'b 0001 0001 0001 0001;
				spriteindex_new = 6'd43;
			end
		// J
			3'b2:
			begin
				blockstate_new = 16'b 0000 0011 0010 0010;
				spriteindex_new = 6'd38;
			end
		// L
			3'b2:
			begin
				blockstate_new = 16'b 0000 0011 0001 0001;
				spriteindex_new = 6'd40;
			end
		// O
			3'b2:
			begin
				blockstate_new = 16'b 0000 0000 0011 0011;
				spriteindex_new = 6'd44;
			end
			
			
		end
	 end
 
 
endmodule
